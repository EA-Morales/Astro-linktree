---
import Layout from '../layouts/Layout.astro';
import json from '../assets/Data/Data.json';
import Link from '../components/Link.astro';
---

<Layout title='Agustin Morales'>
	<header class='flex flex-col items-center'>
		<h1 class='font-bold text-red-500'>Agustin Morales</h1>
		<h2>Frontend Developer</h2>
	</header>
	<main class='mt-24 flex flex-col justify-center'>
		<section class='mt-6 flex flex-col items-center'>
			<ul class='flex w-1/2 flex-col items-center gap-4'>
				{
					json.map((data) => (
						<Link
							title={data.title}
							href={data.url}
							icon={data.icon}
						/>
					))
				}
			</ul>
		</section>
	</main>
	<footer class='flex justify-center'>Made with ‚ù§ Agustin Morales</footer>
</Layout>
