---
import avatar from '../assets/Images/avatar.webp';
import Dots from '../assets/icons/Dots.svg';
---

<nav
	id='navbar'
	class='fixed my-2 mx-4 grid w-11/12 grid-cols-[1fr-auto-1fr] rounded-[72px] border border-transparent py-2 pr-6 pl-3'>
	<img
		id='1'
		width='40'
		class='hidden rounded-full'
		src={avatar}
		alt=''
	/>
	<p
		id='2'
		class='col-start-2 hidden items-center self-center text-center font-semibold'>
		Agustin Morales
	</p>
	<button
		class='group col-start-3 flex h-10 w-10 items-center justify-center place-self-end rounded-full border bg-white hover:bg-black'>
		<img
			width='16'
			class='group-hover:invert'
			src={Dots}
			alt='dots image for open menu'
		/>
	</button>
</nav>
