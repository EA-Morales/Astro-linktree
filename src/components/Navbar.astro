---
import avatar from '../assets/Images/avatar.webp';
import Dots from '../assets/icons/Dots.svg';
---

<nav
	id='navbar'
	class='fixed my-2 mx-4 grid w-11/12 grid-cols-[1fr-auto-1fr] rounded-[72px] border border-transparent py-2 pr-6 pl-3'>
	<img
		id='navbar__image'
		width='40'
		class='hidden rounded-full'
		src={avatar}
		alt=''
	/>
	<p
		id='navbar__paragraph'
		class='col-start-2 hidden items-center self-center text-center font-semibold'>
		Agustin Morales
	</p>
	<button
		id='navbar__button'
		class='group col-start-3 flex h-10 w-10 items-center justify-center place-self-end rounded-full border bg-white hover:bg-black'>
		<img
			width='16'
			class='group-hover:invert'
			src={Dots}
			alt='dots for open menu'
		/>
	</button>
</nav>

<script>
	const modal__container = document.getElementById('modal__container');
	const navbar__button = document.getElementById('navbar__button');
	const button__close__modal = document.getElementById('button__close__modal');

	navbar__button.addEventListener('click', function () {
		modal__container?.classList.remove('hidden');
	});

	button__close__modal.addEventListener('click', function () {
		modal__container?.classList.add('hidden');
	});
</script>
